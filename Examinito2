{
}

void Vector::Pares(){
	int num,cont=0;
	cout<<"Ingresar el numero:"<<endl;
	cin>>n;
	num=n;

		if((num/10) %2==0)
		{cont++;
			cout<<"Hay pares"<<endl;
		}
	}

